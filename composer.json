{
    "name": "basecodeoy/pickle",
    "description": "A collection of commonly used serializers and deserializers in applications.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "BaseCode Oy",
        "laravel",
        "intl"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/basecodeoy/pickle",
    "support": {
        "issues": "https://github.com/basecodeoy/pickle/issues",
        "source": "https://github.com/basecodeoy/pickle",
        "security": "https://github.com/basecodeoy/pickle/blob/main/.github/SECURITY.md"
    },
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "ext-xmlreader": "*",
        "illuminate/contracts": "^11.0",
        "illuminate/support": "^11.0",
        "saloonphp/xml-wrangler": "^1.3.1",
        "spatie/laravel-data": "^4.11.1",
        "symfony/yaml": "^7.2.0"
    },
    "require-dev": {
        "basecodeoy/standards": "^1.1.1"
    },
    "autoload": {
        "psr-4": {
            "BaseCodeOy\\Pickle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "audit": {
            "abandoned": "report"
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
